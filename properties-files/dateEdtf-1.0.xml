<property xmlns="http://faculty.washington.edu/tgis/xml/xsd/modules/xsd4md/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xsi:schemaLocation="http://faculty.washington.edu/tgis/xml/xsd/modules/xsd4md/ http://faculty.washington.edu/tgis/xml/xsd/modules/xsd4md/schema-4-properties-0.1.xsd">
    <labels>
        <platformIndependent>dateEdtf</platformIndependent>
        <dc>date</dc>
    </labels>
    <cdm>
        <label>Date-EDTF</label>
        <cdmDatatype>text</cdmDatatype>
        <cdmLarge>no</cdmLarge>
        <searchable>no</searchable>
        <hidden>yes</hidden>
        <required>yes</required>
        <cdmControlledVocab>no</cdmControlledVocab>
    </cdm>
    <dspace>
        <dspaceProperty/>
    </dspace>
    <descriptions>
        <definition co="no">
            <para>Date in EDTF format</para>
        </definition>
        <instructions co="no">
            <para>Enter date in EDTF format Level 0 or 1; if Level 2 is required, check with MIG.</para>
        </instructions>
        
    </descriptions>
    <examples>
        <example co="no">
            <para>2004</para>
            <para>2004-03-06</para>
            <para>1964/2006</para>
            <para>1964-05-18/1999-12-02</para>
            <para>1984?</para>
            <para>2004-06-11?</para>
            <para>1922~</para>
            <para>1637?~</para>
            <para>199u</para>
            <para>19uu</para>
            <para>1907-07-uu</para>
            <para>2004-06-01/unknown</para>
            <para>1992-01-01/open</para>
            <para>1984~/2004</para>
            <para>1984?/2004?~</para>
            <para>1988-22</para>
        </example>
        
        <!-- customization here is flawed.
             I think we need
             <customizations>
                 <description | example>
                     <para @co @dd @paraDec @paraEx> REPEATABLE
                         <para>
        -->
        
    </examples>
    <additionalInfo>
        <admin>
            <para>Replaces Earliest Date and Latest Date.</para>
            <para>Because all Level 0 EDTF is ISO 8601, ISO dates are mostly EDTF compliant. There are exceptions.</para>
            <para>At present there is no regular expression to capture the full complexity of EDTF, so we are validating it as xs:string.</para>
            <para>To facilitate Orbis Cascade Alliance harvests, this field should be the first field in the sequence of date fields.</para>
        </admin>
        <generalNotes>
            <para/>
        </generalNotes>
    </additionalInfo>
    <marc>
        <dcgMarcMapping/>
        <marcNotes>
            <para/>
        </marcNotes>
    </marc>
    <xsd>
        <typeAttribute>xs:string</typeAttribute>
        
    </xsd>
    <rdf>
        <sameAs/>
    </rdf>
    <history>
        <dateCreated>
            <single>2017-03-30</single>
            
        </dateCreated>
        <created4Coll>All collections</created4Coll>
        <justification>Using EDTF gives us improved accuracy for expressing dates, plus it allows us to be compliant with Orbis Cascade Alliance Best Practices for Dublin Core Metadata.</justification>
        <changeLog>
            <change/>
        </changeLog>
    </history>
</property>